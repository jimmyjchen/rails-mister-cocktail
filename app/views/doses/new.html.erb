<div class="container-edit">
  <div class="row">
    <div class="col col-sm-8 offset-2">
      <h3>New Dose for <%= @cocktail.name %></h3>
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <div class="form-group">
          <%= f.input :description %>
        </div>
        <div class="form-group">
          <%= f.association :ingredient %>
        </div>
        <div class="form-group">
          <%= f.submit class: "btn btn-primary btn-ghost" %>
        </div>
      <% end -%>
      <div class="box-back">
        <div><%= link_to cocktail_path(@cocktail) do %>
          <i class="fas fa-arrow-left icon"></i>
          <span>Back</span>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
