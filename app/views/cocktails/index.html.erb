<div class="banner">
  <div class="banner-container">
    <div class="banner-header">
      <div class="header-menu">
        <p>Murmuring Dusk // Cocktail Diary</p>
      </div>
    </div>
    <img class="img-banner" style="object-fit:cover;vertical-align:bottom" alt="" decoding="auto" sizes="100vw" src="https://images.unsplash.com/photo-1529502669403-c073b74fcefb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2550&q=80">
    <div class="banner-text-container">
      <div class="row">
        <div class="col col-sm-10 col-md-8 col-lg-6">
          <div class="banner-text">
            <div class="banner-head-text">
              <h3>Search and save cocktail recipes.</h3>
            </div>
            <%= simple_form_for :search, url: cocktails_search_path, method: "GET", html: { class: 'form-inline' } do |f| %>
              <%= f.input :name, input_html: {value: ""}, label: false %>
              <%= f.submit "Search", class: "btn btn-primary btn-ghost" %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="main-container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card" style="width: 14em;">
        <%= link_to cocktail_path(cocktail.id) do %>
          <img class="card-img-top" src="<%= cocktail.image_url %>" alt="cocktail.name">
          <div class="card-body main">
            <div class="card-header-list">
              <h5 class="card-title" style="color: rgb(50,50,50)"><%= cocktail.name %></h5>
              <div class=icons-header-list>
                <div>
                  <%= link_to edit_cocktail_path(cocktail.id) do %>
                    <i class="fas fa-edit icon"></i>
                  <% end %>
                  </div>
                <div>
                  <%= link_to cocktail_path(cocktail.id), method: :delete, data: { confirm: "Are you sure?" } do %>
                    <i class="far fa-trash-alt icon"></i>
                  <% end %>
                </div>
              </div>
            </div>
            <p class="card-text"></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item card-footer">
              <div>
                <% if cocktail.rating == 0 %>
                  <span>No rating yet!</span>
                <% else %>
                  <% i = 0 %>
                  <% while i < cocktail.rating %>
                    <i class="fas fa-star" style="color: #2a7a66"></i>
                    <% i += 1 %>
                  <% end %>
                <% end %>
              </div>
            </li>
          </ul>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="footer">
  <div class="list-icons">
    <a href="#"><i class="fab fa-facebook-square"></i></a>
    <a href="https://github.com/jimmyjchen"><i class="fab fa-github-square"></i></a>
    <a href="https://linkedin.com/in/chenjimmy"><i class="fab fa-linkedin"></i></a>
    <a href="#"><i class="fab fa-weixin"></i></a>
  </div>
  <p>A cocktail app, coded with ❤️ at Le Wagon</p>
</div>
